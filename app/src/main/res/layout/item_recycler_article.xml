<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_tab">


    <TextView
        android:id="@+id/item_recycler_article_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_line"
        android:background="@color/color_dark_gray" />

    <TextView
        android:id="@+id/item_recycler_article_title"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/item_padding"
        tools:text="@string/search" />


    <TextView
        android:id="@+id/item_recycler_article_content"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/item_recycler_article_title"
        android:paddingLeft="@dimen/item_padding"
        tools:text="@string/search" />
</RelativeLayout>