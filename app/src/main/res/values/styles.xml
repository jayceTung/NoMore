<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">#4876FF</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">#4876FF</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 文字颜色 -->
        <item name="android:textColorPrimary">@android:color/white</item>


        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme"></style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView"></style>

    <style name="FootLayout">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/text_little_small</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">11dp</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">@dimen/common_padding</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
