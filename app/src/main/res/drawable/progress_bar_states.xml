<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:centerColor="@color/color_white"
                android:endColor="@color/color_white"
                android:startColor="@color/color_white"

                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:centerColor="@color/color_blue"
                    android:endColor="@color/color_blue"
                    android:startColor="@color/color_blue" />
            </shape>
        </clip>
    </item>

</layer-list>
